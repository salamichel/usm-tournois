<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'USM Tournois Master - Application Complète' %></title>
    <% if (event) { %>
    <meta property="og:title" content="<%= event.name %>">
    <meta property="og:description" content="<%= event.description ? event.description.substring(0, 150) + '...' : 'Détails du tournoi' %>">
    <meta property="og:url" content="<%= req.protocol + '://' + req.get('host') + req.originalUrl %>">
    <meta property="og:type" content="website">
    <% if (event.coverImage) { %>
    <meta property="og:image" content="<%= req.protocol + '://' + req.get('host') + event.coverImage %>">
    <% } %>

    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="<%= event.name %>">
    <meta name="twitter:description" content="<%= event.description ? event.description.substring(0, 150) + '...' : 'Détails du tournoi' %>">
    <% if (event.coverImage) { %>
    <meta name="twitter:image" content="<%= req.protocol + '://' + req.get('host') + event.coverImage %>">
    <% } %>
    <% } %>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="/css/main.css">
</head>
<body class="antialiased">

    <!-- =========== HEADER =========== -->
    <%- include('partials/header') %>

    <!-- =========== FLASH MESSAGE CONTAINER =========== -->
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 mt-4">
        <%- include('partials/flash-message', { flashMessage: flashMessage }) %>
    </div>

    <!-- =========== MAIN CONTENT CONTAINER =========== -->
    <main id="app-main-content" class="container mx-auto p-4 sm:p-6 lg:p-8">
        <%- body %>
    </main>
    
    <!-- Footer -->
    <%- include('partials/footer') %>

    <!-- Toast Container -->
    <div id="toast-container" class="fixed top-4 right-4 z-50 space-y-2"></div>

    <script src="/js/main.js"></script>
    <script src="/js/tournament-filter.js"></script>

    <% if (flashMessage) { %>
        <script>
            document.addEventListener('DOMContentLoaded', () => {
                showToast('<%= flashMessage.message %>', '<%= flashMessage.type %>');
            });
        </script>
    <% } %>
</body>
</html>
