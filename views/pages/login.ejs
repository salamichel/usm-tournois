<div class="max-w-md mx-auto">
    <div class="glass-card rounded-xl p-8">
        <!-- Formulaire de Connexion -->
        <form id="login-form" action="/auth/login" method="POST">
            <h2 class="text-3xl font-bold text-center text-white mb-6">Connexion</h2>

            <!-- Affichage des erreurs (si elles existent) -->
            <% if (error) { %>
                <div class="text-red-500 text-sm mb-4 text-center">
                    <%= error %>
                </div>
                <% } %>

                    <div class="mb-4">
                        <label for="email" class="block text-sm font-medium text-gray-300 mb-1">Email</label>
                        <input type="email" id="email" name="email"
                            class="shadow appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline bg-gray-700 border-gray-600 text-white"
                            required>
                    </div>
                    <div class="mb-6">
                        <label for="password" class="block text-sm font-medium text-gray-300 mb-1">Mot de passe</label>
                        <input type="password" id="password" name="password"
                            class="shadow appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline bg-gray-700 border-gray-600 text-white"
                            required>
                    </div>
                    <button type="submit" class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                        Se connecter
                    </button>
                    <p class="text-center text-sm text-gray-400 mt-4">
                        Pas encore de compte ?
                        <a href="#" id="show-signup" class="font-medium text-blue-400 hover:text-blue-300">
                            Inscrivez-vous
                        </a>
                    </p>
        </form>

        <!-- Formulaire d'Inscription -->
        <form action="/auth/signup" id="signup-form" class="hidden"  method="POST">
            <h2 class="text-3xl font-bold text-center text-white mb-6">Créer un compte</h2>
            <div id="signup-error" class="text-red-400 text-sm mb-4 text-center hidden"></div>
            <div class="mb-4">
                <label for="signup-pseudo" class="block text-sm font-medium text-gray-300 mb-1">Pseudo</label>
                <input type="text" id="signup-pseudo" name="pseudo"
                    class="w-full bg-gray-900 border border-gray-700 rounded-md p-2 focus:ring-blue-500 focus:border-blue-500"
                    required>
            </div>
            <div class="mb-4">
                <label for="signup-email" class="block text-sm font-medium text-gray-300 mb-1">Email</label>
                <input type="email" id="signup-email" name="email"
                    class="w-full bg-gray-900 border border-gray-700 rounded-md p-2 focus:ring-blue-500 focus:border-blue-500"
                    required>
            </div>
            <div class="mb-4">
                <label for="signup-password" class="block text-sm font-medium text-gray-300 mb-1">Mot de
                    passe</label>
                <input type="password" id="signup-password" name="password"
                    class="w-full bg-gray-900 border border-gray-700 rounded-md p-2 focus:ring-blue-500 focus:border-blue-500"
                    required>
            </div>
            <div class="mb-4">
                <label for="signup-level" class="block text-sm font-medium text-gray-300 mb-1">Votre
                    niveau</label>
                <select id="signup-level" name="level"
                    class="w-full bg-gray-900 border border-gray-700 rounded-md p-2 focus:ring-blue-500 focus:border-blue-500"
                    required>
                    <option value="Débutant">Débutant</option>
                    <option value="Intermédiaire">Intermédiaire</option>
                    <option value="Confirmé">Confirmé</option>
                </select>
            </div>
            <button type="submit" class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">S'inscrire</button>
            <p class="text-center text-sm text-gray-400 mt-6">Déjà un compte ? <a href="#" id="show-login"
                    class="font-medium text-blue-400 hover:text-blue-300">Connectez-vous</a></p>
        </form>
    </div>
</div>
