<!-- View: Tournaments List -->
<div id="tournaments-list-view" class="container mx-auto p-4 sm:p-6 lg:p-8">
    <!-- Tournaments Section -->
    <section id="tournaments-section">
        <h2 class="text-3xl font-bold mb-8 text-center">Tournois à Venir</h2>
        <!-- Filter Bar -->
        <div class="glass-card p-4 rounded-lg mb-8 flex flex-col sm:flex-row gap-4">
            <div class="flex-grow">
                <div class="relative">
                    <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3"><i class="fas fa-search text-gray-400"></i></div>
                    <input type="text" id="search-input" placeholder="Rechercher par nom, lieu..." class="w-full bg-gray-900 border border-gray-700 rounded-md p-2 focus:ring-blue-500 focus:border-blue-500">
                </div>
            </div>
            <div class="flex gap-4">
                <select id="type-filter" class="w-full bg-gray-900 border border-gray-700 rounded-md p-2 focus:ring-blue-500 focus:border-blue-500">
                    <option value="all">Tous les types</option>
                    <option value="4x4">4x4</option>
                    <option value="2x2">2x2</option>
                    <option value="6x6">6x6</option>
                </select>
                <select id="date-filter" class="w-full bg-gray-900 border border-gray-700 rounded-md p-2 focus:ring-blue-500 focus:border-blue-500">
                    <option value="all">Toutes les dates</option>
                    <option value="prochainement">Prochainement</option>
                    <option value="passe">Passés</option>
                </select>
            </div>
        </div>
        <!-- Tournaments Grid -->
        <div id="tournaments-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% if (events && events.length > 0) { %>
                <% events.forEach(event => { %>
                    <%- include('../partials/tournament-card', { event: event }) %>
                <% }); %>
            <% } else { %>
                <p class="text-center text-gray-400 mt-8 col-span-full">Aucun tournoi ne correspond à votre recherche.</p>
            <% } %>
        </div>
        <p id="no-results" class="text-center text-gray-400 mt-8 hidden">Aucun tournoi ne correspond à votre recherche.</p>
    </section>
</div>

<!-- Other Views will be injected here by JS -->
<div id="tournament-detail-view" class="view"></div>
<div id="dashboard-view" class="view"></div>
<div id="manage-team-view" class="view"></div>
