<h1 class="text-3xl font-bold mb-6">Gestion des Utilisateurs</h1>

<a href="/admin/users/new" class="btn btn-primary mb-4 inline-flex">Créer un nouvel utilisateur</a>

<div class="overflow-x-auto">
    <table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
        <thead class="bg-gray-800 text-white">
            <tr>
                <th class="py-3 px-4 text-left">UID</th>
                <th class="py-3 px-4 text-left">Email</th>
                <th class="py-3 px-4 text-left">Pseudo</th>
                <th class="py-3 px-4 text-left">Niveau</th>
                <th class="py-3 px-4 text-left">Actions</th>
            </tr>
        </thead>
        <tbody class="text-gray-700">
            <% if (users.length === 0) { %>
                <tr>
                    <td colspan="5" class="py-3 px-4 text-center">Aucun utilisateur trouvé.</td>
                </tr>
            <% } else { %>
                <% users.forEach(user => { %>
                    <tr class="border-b border-gray-200 hover:bg-gray-100">
                        <td class="py-3 px-4 text-sm"><%= user.uid %></td>
                        <td class="py-3 px-4"><%= user.email %></td>
                        <td class="py-3 px-4"><%= user.pseudo %></td>
                        <td class="py-3 px-4"><%= user.level %></td>
                        <td class="py-3 px-4 flex space-x-2">
                            <a href="/admin/users/<%= user.uid %>/edit" class="btn btn-secondary py-1 px-3 text-sm">Modifier</a>
                            <form action="/admin/users/<%= user.uid %>/delete" method="POST" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');">
                                <button type="submit" class="btn btn-danger py-1 px-3 text-sm">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            <% } %>
        </tbody>
    </table>
</div>
