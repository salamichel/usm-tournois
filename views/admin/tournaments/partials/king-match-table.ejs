<% /*
 * Partial pour afficher un tableau de matchs pour une poule donnée dans le mode King.
 * Nécessite les variables suivantes :
 * - tournamentId: L'ID du tournoi.
 * - pool: L'objet poule contenant les matchs.
 */ %>

<% if (pool.matches && pool.matches.length > 0) { %>
    <div class="grid grid-cols-1 gap-4">
        <% pool.matches.forEach(match => { %>
            <div class="bg-gray-800 p-4 rounded-lg shadow flex flex-col">
                <p class="text-gray-300 text-sm mb-2">Match <%= match.matchNumber %> - <%= match.round %></p>
                <div class="flex justify-between items-center mb-2">
                    <span class="text-white font-bold text-lg"><%= match.team1.name %> (<%= match.team1.members.map(p => p.pseudo || p.id).join(', ') %>)</span>
                    <span class="text-gray-400 mx-2">vs</span>
                    <span class="text-white font-bold text-lg"><%= match.team2.name %> (<%= match.team2.members.map(p => p.pseudo || p.id).join(', ') %>)</span>
                </div>
                <p class="text-gray-500 text-sm mb-2">Statut: <span class="font-semibold <%= match.status === 'completed' ? 'text-green-400' : 'text-yellow-400' %>"><%= match.status === 'completed' ? 'Terminé' : 'En attente' %></span></p>
                <% if (match.status === 'completed') { %>
                    <div class="flex items-center justify-center text-green-400 font-semibold text-xl mb-2">
                        <span><%= match.setsWonTeam1 %></span>
                        <span class="mx-2">-</span>
                        <span><%= match.setsWonTeam2 %></span>
                    </div>
                    <p class="text-green-400 text-center">Vainqueur: <span class="font-bold"><%= match.winnerName || 'N/A' %></span></p>
                <% } else { %>
                    <form class="record-match-result-form mt-2 flex flex-col items-center" data-match-id="<%= match.id %>">
                        <div class="flex items-center space-x-2 mb-2">
                            <input type="number" name="setsWonTeam1" placeholder="Score Équipe 1" value="0" class="w-24 p-1 rounded bg-gray-700 text-white text-center" required>
                            <span class="text-white text-xl">-</span>
                            <input type="number" name="setsWonTeam2" placeholder="Score Équipe 2" value="0" class="w-24 p-1 rounded bg-gray-700 text-white text-center" required>
                        </div>
                        <button type="submit" class="bg-green-500 hover:bg-green-700 text-white py-1 px-3 rounded">Enregistrer le résultat</button>
                    </form>
                <% } %>
            </div>
        <% }); %>
    </div>
<% } else { %>
    <p class="text-gray-400">Aucun match généré pour cette poule.</p>
<% } %>
